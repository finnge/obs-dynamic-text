# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

# Everything, except external code
[**]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md,*.markdown,*.yml]
indent_size = 2
trim_trailing_whitespace = false
